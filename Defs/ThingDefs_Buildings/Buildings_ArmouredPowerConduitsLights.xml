    </costList>
	<stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>20</costStuffCount>
    <statBases>
      <MaxHitPoints>250</MaxHitPoints>
      <WorkToBuild>35</WorkToBuild>
      <Flammability>0.3</Flammability>
      <Mass>4</Mass>
    </statBases>
    <comps>
