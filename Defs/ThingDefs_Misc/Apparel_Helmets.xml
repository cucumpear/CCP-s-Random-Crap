      </bodyPartGroups>
      <worngraphicPath>Headwear/BowlerHat/BowlerHat</worngraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <commonality>1</commonality>
      <tags>
        <li>Outlander</li>
      </tags>
      <defaultOutfitTags>
