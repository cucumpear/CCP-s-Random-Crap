<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="PlantBase">
    <defName>PlantRose</defName>
    <label>rose</label>
    <description>A beautiful cultivated flower, symbolic of love and romance since ancient times.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Beauty>14</Beauty>
    </statBases>
    <graphicData>
      <texPath>Rose</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <altitudeLayer>Item</altitudeLayer>
    <selectable>true</selectable>
    <ingestible>
      <nutrition>0.03</nutrition>
	   <preferability>NeverForNutrition</preferability>
    </ingestible>
    <plant>
			<fertilitySensitivity>1.0</fertilitySensitivity>
			<dieIfLeafless>true</dieIfLeafless>
			<reproduces>false</reproduces>
			<harvestTag>Standard</harvestTag>
			<harvestDestroys>True</harvestDestroys>
			<sowWork>400</sowWork>
			<sowTags>
				<li>Ground</li>
				<li>Decorative</li>
			</sowTags>
			<growMinGlow>0.3</growMinGlow>
			<topWindExposure>0.1</topWindExposure>
			<growDays>1.5</growDays>
			<lifespanFraction>7</lifespanFraction>
			<visualSizeRange>
        <min>0.3</min>
        <max>1.05</max>
      </visualSizeRange>
    </plant>
  </ThingDef>

