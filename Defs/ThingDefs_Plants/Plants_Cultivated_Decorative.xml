    </statBases>
    <graphicData>
      <texPath>Daylily</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <altitudeLayer>Item</altitudeLayer>
    <selectable>true</selectable>
    <ingestible>
      <nutrition>0.03</nutrition>
	   <preferability>NeverForNutrition</preferability>
    </ingestible>
    <plant>
      <fertilitySensitivity>1</fertilitySensitivity>
      <dieIfLeafless>true</dieIfLeafless>
      <reproduces>false</reproduces>
      <harvestTag>Standard</harvestTag>
      <harvestDestroys>true</harvestDestroys>
      <sowWork>400</sowWork>
      <sowTags>
        <li>Ground</li>
        <li>Decorative</li>
      </sowTags>
      <growMinGlow>0.3</growMinGlow>
      <topWindExposure>0.1</topWindExposure>
      <growDays>1.5</growDays>
      <lifespanFraction>3</lifespanFraction>
      <visualSizeRange>
        <min>0.3</min>
        <max>1.05</max>
      </visualSizeRange>
    </plant>
  </ThingDef>

  
  <ThingDef ParentName="PlantBase">
    <defName>PlantWildflowers</defName>
    <label>wildflowers</label>
    <description>Mixed flowers, very pretty.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Beauty>25</Beauty>
    </statBases>
    <graphicData>
      <texPath>Wildflowers</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <hideAtSnowDepth>0.5</hideAtSnowDepth>
	<ingestible>
      <nutrition>0.03</nutrition>
	   <preferability>NeverForNutrition</preferability>
    </ingestible>
    <plant>
			<fertilitySensitivity>1</fertilitySensitivity>
			<growDays>2.5</growDays>
			<sowTags>
        <li>Ground</li>
        <li>Decorative</li>
      </sowTags>
      <fertilityMin>0.05</fertilityMin>
      <maxMeshCount>9</maxMeshCount>
      <visualSizeRange>
        <min>0.4</min>
        <max>0.6</max>
      </visualSizeRange>
      <topWindExposure>0.3</topWindExposure>
      <reproduceMtbDays>3</reproduceMtbDays>
    </plant>
  </ThingDef>
  
</Defs>